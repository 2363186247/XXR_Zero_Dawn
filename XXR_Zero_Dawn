    if file_path.is_file():\n            target_file = target_dir / file_path.name\n            \n            # 如果目标并没有这个文件，就创建一个软链接\n            if not target_file.exists():\n                # 创建软链接：相当于在 ComfyUI 文件夹里放了一个“快捷方式”指向 Input\n                # 这样既不占用额外空间，ComfyUI 也能读到\n                os.symlink(file_path, target_file)\n                print(f\"成功链接模型: {file_path.name}\")\n            else:\n                print(f\"模型已存在，跳过: {file_path.name}\")\nelse:\n    print(\"错误：未找到挂载的数据集路径，请检查 '/kaggle/input' 下的目录名称\")","metadata":{"trusted":true},"outputs":[],"execution_count":null},{"cell_type":"code","source":"import subprocess\nimport threading\nimport time\nimport socket\nfrom kaggle_secrets import UserSecretsClient\n\ndef iframe_thread(port):\n    print(\"正在等待 ComfyUI 服务启动...\")\n    while True:\n        time.sleep(1)\n        sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)\n        result = sock.connect_ex(('127.0.0.1', port))\n        if result == 0:\n            break\n        sock.close()\n    print(\"\\nComfyUI 已启动! 正在建立 Cloudflare 隧道...\\n\")\n\n    user_secrets = UserSecretsClient()\n    cf_token = user_secrets.get_secret(\"CF_TOKEN\")\n    p = subprocess.Popen([\"cloudflared\", \"tunnel\", \"run\", \"--token\", cf_token], stdout=subprocess.PIPE, stderr=subprocess.PIPE)\n    for line in p.stderr:\n        l = line.decode()\n        if \"trycloudflare.com \" in l:\n            print(\"This is the URL to access ComfyUI:\", l[l.find(\"http\"):], end='')\n    print(f\"隧道已建立，请访问您的域名。\")\n\n# 启动 ComfyUI 线程\nthreading.Thread(target=iframe_thread, daemon=True, args=(8188,)).start()\n\n# 运行 ComfyUI (添加 --highvram 参数以充分利用 T4 显存)\n!python main.py --dont-print-server --highvram","metadata":{"trusted":true},"outputs":[],"execution_count":null}]}